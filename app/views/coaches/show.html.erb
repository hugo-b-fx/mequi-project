<% if user_signed_in? %>
  <div id="bookingModal"
       class="booking-modal d-none"
       data-booking-modal-target="modal">

    <div class="booking-backdrop" data-action="click->booking-modal#close"></div>

    <div class="booking-card">

      <!-- HEADER -->
      <div class="booking-header">
        <div>
          <div class="small text-muted">R√©servation</div>
          <div class="fw-semibold" style="color:#5f3b2f;">
            S√©ance avec <%= @coach.user.first_name %>
          </div>
        </div>
        <button type="button"
                class="btn btn-sm btn-light"
                data-action="click->booking-modal#close">
          ‚úï
        </button>
      </div>

      <!-- PROGRESS -->
      <div class="booking-progress-wrapper">
        <div class="booking-progress">
          <div class="step active" data-booking-modal-target="progressStep">1</div>
          <div class="line"></div>
          <div class="step" data-booking-modal-target="progressStep">2</div>
          <div class="line"></div>
          <div class="step" data-booking-modal-target="progressStep">3</div>
        </div>
      </div>

      <!-- FORM -->
      <%= form_with url: bookings_path, method: :post, data: { turbo: false }, class: "booking-form" do %>
        <%= hidden_field_tag :coach_id, @coach.id %>

        <div class="booking-body">

          <!-- ================= STEP 1 ================= -->
          <div class="booking-step active" data-booking-modal-target="step">
            <h5 class="mb-3">Quel cheval participera √† la s√©ance ?</h5>

            <%= select_tag :horse_id,
              options_from_collection_for_select(current_user.horses, :id, :name, current_user.horses.first.id),
              class: "form-select",
              required: true,
              data: { action: "change->booking-modal#selectHorse" } %>

            <div class="step-actions">
              <button type="button"
                      class="btn btn-brown"
                      id="modal-button"
                      data-action="click->booking-modal#next"
                      disabled
                      data-booking-modal-target="nextBtn">
                Continuer
              </button>
            </div>
          </div>

          <!-- ================= STEP 2 ================= -->
          <div class="booking-step" data-booking-modal-target="step">

            <div class="step-grid">

              <!-- COLONNE GAUCHE : CR√âNEAUX -->
              <div class="step-left">
                <h5 class="mb-2">Choisis un cr√©neau disponible</h5>
                <p class="text-muted small mb-3">
                  S√©lectionne un cr√©neau ci-dessous (7 jours).
                </p>

                <% availability = @coach.coach_availabilities.first %>

                <% if availability.present? %>
                  <% booked_slots = @coach.bookings.where(
                        "start_at >= ? AND start_at <= ?",
                        Date.today.beginning_of_day,
                        7.days.from_now.end_of_day
                      ).pluck(:start_at, :end_at) %>

                  <% 7.times do |i| %>
                    <% day = Date.today + i.days %>
                    <% weekday = l(day, format: "%A").downcase %>
                    <% next if availability.days_off.to_s.downcase == weekday %>

                    <% day_start = Time.zone.parse("#{day} #{availability.start_time.strftime("%H:%M")}") %>
                    <% day_end   = Time.zone.parse("#{day} #{availability.end_time.strftime("%H:%M")}") %>

                    <h6 class="mt-3 mb-2" style="color:#5f3b2f;">
                      <%= l(day, format: "%A %d %B") %>
                    </h6>

                    <div class="d-flex flex-wrap gap-2">
                      <% current_slot = day_start %>
                      <% while current_slot < day_end %>
                        <% slot_end = current_slot + 1.hour %>

                        <% overlapping = booked_slots.any? { |b_start, b_end| current_slot < b_end && slot_end > b_start } %>

                        <% if overlapping %>
                          <button type="button"
                                  class="btn btn-sm btn-outline-secondary disabled">
                            <%= current_slot.strftime("%Hh%M") %>
                          </button>
                        <% else %>
                          <% label = "#{l(day, format: "%A %d %B")} ¬∑ #{current_slot.strftime("%Hh%M")}‚Äì#{slot_end.strftime("%Hh%M")}" %>
                          <button type="button"
                                  class="btn btn-sm btn-brown"
                                  data-action="click->booking-modal#pickSlot"
                                  data-start-at="<%= current_slot.iso8601 %>"
                                  data-end-at="<%= slot_end.iso8601 %>"
                                  data-label="<%= j label %>">
                            <%= current_slot.strftime("%Hh%M") %>
                          </button>
                        <% end %>

                        <% current_slot += 1.hour %>
                      <% end %>
                    </div>
                  <% end %>
                <% end %>

                <%= hidden_field_tag "booking[start_at]", nil, data: { booking_modal_target: "startAt" } %>
                <%= hidden_field_tag "booking[end_at]", nil, data: { booking_modal_target: "endAt" } %>
              </div>

              <!-- COLONNE DROITE : R√âCAP + CTA -->
              <div class="step-right">
                <div class="slot-preview mb-3">
                  <strong>Cr√©neau s√©lectionn√©</strong>
                  <div data-booking-modal-target="slotPreview">Aucun</div>
                </div>

                <div class="step-actions between">
                  <button type="button"
                          class="btn btn-outline-secondary"
                          data-action="click->booking-modal#prev">
                    Retour
                  </button>

                  <button type="button"
                          class="btn btn-brown"
                          data-action="click->booking-modal#next"
                          disabled
                          data-booking-modal-target="nextBtn">
                    Continuer
                  </button>
                </div>
              </div>

            </div>
          </div>

          <!-- ================= STEP 3 ================= -->
          <div class="booking-step" data-booking-modal-target="step">
            <h5 class="mb-3">Confirmation</h5>

            <div class="recap-card">
              <p><strong>Coach</strong><br><%= @coach.user.full_name %></p>
              <p><strong>Cheval</strong><br>
                <span data-booking-modal-target="recapHorse"></span>
              </p>
              <p><strong>Date & heure</strong><br>
                <span data-booking-modal-target="recapSlot"></span>
              </p>
              <p><strong>Prix</strong><br>
                <%= @coach.price_per_session %>‚Ç¨ / s√©ance
              </p>
            </div>

            <div class="step-actions between">
              <button type="button"
                      class="btn btn-outline-secondary"
                      data-action="click->booking-modal#prev">
                Retour
              </button>

              <button type="submit" class="btn btn-success">
                ‚úÖ Confirmer et r√©server
              </button>
            </div>
          </div>

        </div>
      <% end %>

      <!-- FOOTER -->
      <div class="booking-footer">
        üîí Paiement s√©curis√© & assistance M‚Äôequi
      </div>

    </div>
  </div>
<% end %>


</div>
