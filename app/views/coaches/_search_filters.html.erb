<div class="search-filters-card">
  <h5 class="filters-title">Filtres</h5>

  <%= form_with url: coaches_path, method: :get, local: true, class: "search-filters-form" do |f| %>
    <div class="filter-group">
      <label class="filter-label">Recherche</label>
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Nom, spécialité..." %>
    </div>

    <div class="filter-group">
      <label class="filter-label">Localisation</label>
      <%= text_field_tag :location, params[:location], class: "form-control", placeholder: "Ville, région..." %>
    </div>

    <div class="filter-group">
      <label class="filter-label">Spécialité</label>
      <%= select_tag :speciality, options_for_select([["Toutes les spécialités", ""]] + @specialities.map { |s| [s, s] }, params[:speciality]), class: "form-select" %>
    </div>

    <div class="filter-group">
      <label class="filter-label">Niveau</label>
      <%= select_tag :level, options_for_select([["Tous les niveaux", ""]] + @levels.map { |l| [l, l] }, params[:level]), class: "form-select" %>
    </div>

    <div class="filter-group">
      <label class="filter-label">Prix par séance</label>
      <div class="price-range-inputs">
        <%= number_field_tag :price_min, params[:price_min], class: "form-control", placeholder: "Min €", min: 0 %>
        <span class="price-separator">-</span>
        <%= number_field_tag :price_max, params[:price_max], class: "form-control", placeholder: "Max €", min: 0 %>
      </div>
    </div>

    <div class="filter-group">
      <label class="filter-label">Expérience minimum</label>
      <%= select_tag :experience_min, options_for_select([
        ["Peu importe", ""],
        ["1 an+", 1],
        ["3 ans+", 3],
        ["5 ans+", 5],
        ["10 ans+", 10],
        ["15 ans+", 15]
      ], params[:experience_min]), class: "form-select" %>
    </div>

    <div class="filter-actions">
      <%= submit_tag "Rechercher", class: "btn btn-brown w-100" %>
      <%= link_to "Effacer", coaches_path, class: "btn btn-outline-secondary w-100 mt-2" %>
    </div>
  <% end %>
</div>
