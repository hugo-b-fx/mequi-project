<div class="coach-card">
  <div class="coach-card-image">
    <% if coach.user.photo.attached? %>
      <%= image_tag coach.user.photo, alt: coach.full_name %>
    <% else %>
      <div class="coach-card-placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
          <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
          <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
        </svg>
      </div>
    <% end %>
  </div>

  <div class="coach-card-body">
    <div class="coach-card-header">
      <h3 class="coach-card-name"><%= coach.full_name %></h3>
      <div class="coach-card-rating">
        <span class="rating-star">★</span>
        <span class="rating-value"><%= coach.average_rating > 0 ? coach.average_rating : "N/A" %></span>
        <span class="rating-count">(<%= coach.total_reviews %>)</span>
      </div>
    </div>

    <p class="coach-card-location">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
      </svg>
      <%= coach.location %>
    </p>

    <div class="coach-card-tags">
      <% coach.specialities_list.first(3).each do |speciality| %>
        <span class="coach-tag"><%= speciality %></span>
      <% end %>
    </div>

    <div class="coach-card-meta">
      <span class="meta-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
          <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
          <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
        </svg>
        <%= coach.years_experience %> ans
      </span>
      <span class="meta-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
          <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z"/>
        </svg>
        <%= coach.price_per_session %>€/séance
      </span>
    </div>

    <div class="coach-card-footer">
      <%= link_to "Voir le profil", coach_path(coach), class: "btn btn-brown btn-sm w-100" %>
    </div>
  </div>
</div>
