<div class="login-selector container py-5">
  <h2 class="text-center mb-5 selector-title">Choisissez votre rôle</h2>

  <div class="row justify-content-center gap-4">

    <!-- Cavalier -->
    <div class="col-md-4">
      <div class="role-card">
        <img src="https://res.cloudinary.com/demo/image/upload/v12345/cavalier.jpg" class="role-img">

        <h3 class="mt-3">Je suis cavalier</h3>
        <p class="text-muted">Créer un compte pour trouver des coachs adaptés à vos objectifs.</p>

        <%= link_to "Continuer", new_user_registration_path(role: :cavalier), class: "btn btn-brown w-100" %>
      </div>
    </div>

    <!-- Coach -->
    <div class="col-md-4">
      <div class="role-card">
        <img src="https://res.cloudinary.com/demo/image/upload/v12345/coach.jpg" class="role-img">

        <h3 class="mt-3">Je suis coach</h3>
        <p class="text-muted">Bientôt disponible.</p>

        <a class="btn btn-outline-secondary w-100 disabled">Coming soon</a>
      </div>
    </div>

  </div>
</div>
