<%= render "shared/public_navbar" %>

<div class="coach-show-page bg-light">

  <!-- Lien retour -->
  <div class="container pt-4">
  </div>

  <!-- HERO / BANNI√àRE -->
  <div class="coach-header-banner"
       style="background: linear-gradient(120deg, #5f3b2f 0%, #8b5c42 40%, #7b93c9 100%); min-height: 220px;">
    <div class="container py-4">
      <div class="row align-items-center">

        <!-- Photo + identit√© -->
        <div class="col-md-auto mb-3 mb-md-0">
          <div class="position-relative">
            <div class="rounded-circle border border-4 border-white shadow-lg overflow-hidden"
                 style="width: 140px; height: 140px; background: #f8f5f2;">
              <% if @coach.user.respond_to?(:photo) && @coach.user.photo.attached? %>
                <%= image_tag @coach.user.photo,
                              class: "w-100 h-100",
                              style: "object-fit: cover;",
                              alt: @coach.user.full_name %>
              <% else %>
                <div class="w-100 h-100 d-flex align-items-center justify-content-center">
                  <i class="fas fa-user fa-3x text-muted"></i>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Infos coach -->
        <div class="col-md-6 text-white">
          <div class="d-flex align-items-center flex-wrap gap-2 mb-2">
            <h1 class="h2 mb-0"><%= @coach.user.full_name %></h1>
          </div>

          <% specialities = (@coach.specialities || "").split(",").map(&:strip) %>

          <p class="mb-2 opacity-75">
            Sp√©cialiste
            <% if specialities.any? %>
              <strong><%= specialities.first(2).join(" & ") %></strong>
            <% end %>
          </p>

          <div class="d-flex flex-wrap align-items-center gap-3 small">
            <span>
              <i class="fas fa-star text-warning me-1"></i>
              <strong><%= @coach.average_rating %></strong>
              <span class="opacity-75">(<%= @coach.total_reviews %> avis)</span>
            </span>

            <span>
              <i class="fas fa-map-marker-alt me-1"></i>
              <%= @coach.location %>
            </span>

            <span>
              <i class="fas fa-clock me-1"></i>
              <%= @coach.years_experience %> ans d'exp√©rience
            </span>
          </div>

          <% if specialities.any? %>
            <div class="mt-3 d-flex flex-wrap gap-2">
              <% specialities.first(3).each do |spec| %>
                <span class="badge rounded-pill px-3 py-2"
                      style="background:#f5efe9; color:#5f3b2f; font-weight:500;">
                  <i class="fas fa-horse-head me-1"></i><%= spec %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Bloc prix rapide (rappel) -->
        <div class="col-md-4 mt-4 mt-md-0">
          <div class="card border-0 shadow-lg rounded-4 bg-white">
            <div class="card-body text-center">
              <small class="text-muted d-block mb-1">√Ä partir de</small>
              <h2 class="mb-1" style="color:#5f3b2f;">
                <%= @coach.price_per_session %>‚Ç¨
                <small class="text-muted fs-6">/s√©ance</small>
              </h2>

              <div class="d-flex flex-column gap-2 mt-3">
                <% if user_signed_in? %>
                  <a href="#booking-card" class="btn btn-brown w-100">
                    R√©server une s√©ance
                  </a>
                  <%= link_to "Envoyer un message",
                              new_user_session_path,
                              class: "btn btn-outline-secondary w-100" %>
                <% else %>
                  <%= link_to "Cr√©er un compte pour r√©server",
                              new_user_registration_path,
                              class: "btn btn-brown w-100" %>
                  <%= link_to "Se connecter",
                              new_user_session_path,
                              class: "btn btn-outline-secondary w-100" %>
                <% end %>
              </div>

              <small class="text-muted d-block mt-2">
                <i class="fas fa-clock me-1"></i>R√©pond en &lt; 1h
              </small>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- CONTENU PRINCIPAL -->
  <div class="container my-5">
    <div class="row g-4">

      <!-- COLONNE GAUCHE -->
      <div class="col-lg-8">

        <!-- Stats -->
        <div class="card-mequi mb-4">
          <div class="card-body">
            <div class="row text-center g-3">
              <div class="col-6 col-md-3">
                <div class="stat-card">
                  <div class="stat-number"><%= @coach.total_students %>+</div>
                  <div class="stat-label">√âl√®ves form√©s</div>
                </div>
              </div>
              <div class="col-6 col-md-3">
                <div class="stat-card">
                  <div class="stat-number"><%= @coach.years_experience %> ans</div>
                  <div class="stat-label">D'exp√©rience</div>
                </div>
              </div>
              <div class="col-6 col-md-3">
                <div class="stat-card">
                  <div class="stat-number"><%= @coach.satisfaction_rate %>%</div>
                  <div class="stat-label">Taux de satisfaction</div>
                </div>
              </div>
              <div class="col-6 col-md-3">
                <div class="stat-card">
                  <div class="stat-number"><%= @coach.total_reviews %></div>
                  <div class="stat-label">Avis v√©rifi√©s</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- √Ä propos -->
        <div class="card-mequi mb-4">
          <div class="card-body">
            <h5 class="form-section-title mb-3">
              <i class="fas fa-user-circle me-2"></i>
              √Ä propos de <%= @coach.user.first_name %>
            </h5>

            <p class="text-muted mb-0">
              <% bio_text = @coach.user.respond_to?(:bio) ? @coach.user.bio : nil %>
              <%= bio_text.present? ? simple_format(bio_text) : "Ce coach n'a pas encore renseign√© de description d√©taill√©e." %>
            </p>
          </div>
        </div>

        <!-- Pourquoi choisir ce coach -->
        <div class="card-mequi mb-4">
          <div class="card-body">
            <h5 class="form-section-title mb-3">
              <i class="fas fa-heart text-danger me-2"></i>
              Pourquoi choisir ce coach ?
            </h5>

            <div class="row g-3">
              <% [
                "Patience exceptionnelle avec les d√©butants",
                "M√©thode douce et progressive",
                "Communication claire et encourageante",
                "Sp√©cialiste de la mise en confiance"
              ].each do |reason| %>
                <div class="col-md-6">
                  <div class="d-flex gap-2 align-items-start p-2 rounded-3"
                       style="background:#f8f5f2;">
                    <i class="fas fa-check-circle text-success mt-1 flex-shrink-0"></i>
                    <span><strong><%= reason %></strong></span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Avis -->
        <div class="card-mequi mb-4">
          <div class="card-body">
            <h5 class="form-section-title mb-3">
              <i class="fas fa-comments me-2"></i>
              Ce que disent ses √©l√®ves
            </h5>

            <% if @reviews.any? %>
              <% @reviews.each do |review| %>
                <div class="review-card mb-3 p-3 rounded-3" style="background:#f8f5f2;">
                  <div class="d-flex align-items-center gap-3 mb-2">
                    <% if review.user.respond_to?(:photo) && review.user.photo.attached? %>
                      <%= image_tag review.user.photo,
                                    class: "rounded-circle",
                                    style: "width: 48px; height: 48px; object-fit: cover;" %>
                    <% else %>
                      <div class="rounded-circle bg-white d-flex align-items-center justify-content-center"
                           style="width: 48px; height: 48px;">
                        <i class="fas fa-user text-muted"></i>
                      </div>
                    <% end %>

                    <div>
                      <strong><%= review.user.first_name %> <%= review.user.last_name %></strong>
                      <div class="star-rating small">
                        <span class="me-1" style="color:#f2b01e;">
                          <%= '‚òÖ' * review.rating.to_i %>
                        </span>
                        <span class="text-muted">
                          ‚Ä¢ il y a <%= time_ago_in_words(review.created_at) %>
                        </span>
                      </div>
                    </div>
                  </div>

                  <p class="text-muted mb-0">"<%= review.comment %>"</p>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted mb-0">
                Aucun avis n‚Äôa encore √©t√© publi√© pour ce coach.
              </p>
            <% end %>
          </div>
        </div>

      </div>

      <!-- COLONNE DROITE -->
      <div class="col-lg-4">

        <!-- Booking card compl√®te -->
        <div id="booking-card" class="card-mequi shadow-mequi-lg mb-4 booking-fixed" style="top: 20px;">
          <div class="card-body">

            <div class="text-center mb-3">
              <small class="text-muted d-block">Tarif</small>
              <h2 class="text-mequi-primary mb-0" style="color:#5f3b2f;">
                <%= @coach.price_per_session %>‚Ç¨
                <small class="text-muted fs-6">/s√©ance</small>
              </h2>
            </div>

            <% if user_signed_in? %>
              <%= form_with url: bookings_path, method: :post, data: { turbo: false } do %>
                <%= hidden_field_tag :coach_id, @coach.id %>

                <div class="mb-3">
                  <label class="form-label">Votre cheval</label>
                  <% if current_user.horses.any? %>
                    <%= select_tag :horse_id,
                                   options_from_collection_for_select(current_user.horses, :id, :name),
                                   class: "form-select",
                                   required: true %>
                  <% else %>
                    <select class="form-select" disabled>
                      <option>Aucun cheval enregistr√©</option>
                    </select>
                    <small class="text-muted">
                      Ajoutez un cheval dans votre espace pour r√©server une s√©ance.
                    </small>
                  <% end %>
                </div>

                <!-- Champs hidden remplis par les cr√©neaux -->
                <%= hidden_field_tag "booking[start_at]", nil, id: "booking_start_at" %>
                <%= hidden_field_tag "booking[end_at]", nil, id: "booking_end_at" %>

                <div class="mb-3">
                  <label class="form-label">Cr√©neau s√©lectionn√©</label>
                  <div id="selected-slot-label" class="form-control bg-light">
                    Aucun cr√©neau s√©lectionn√© pour le moment.
                  </div>
                  <small class="text-muted">
                    Clique sur un cr√©neau disponible dans la liste ci-dessous pour le s√©lectionner.
                  </small>
                </div>

                <%= submit_tag "üìû R√©server ce cr√©neau", class: "btn-mequi-primary btn w-100" %>
              <% end %>
            <% else %>
              <%= link_to "üìû R√©server maintenant",
                          new_user_registration_path,
                          class: "btn-mequi-primary btn w-100 mb-2" %>
              <%= link_to "‚úâÔ∏è Se connecter pour envoyer un message",
                          new_user_session_path,
                          class: "btn-mequi-outline btn w-100" %>
            <% end %>

            <small class="text-muted d-block text-center mt-2">
              <i class="fas fa-lock me-1"></i>Paiement s√©curis√© & assistance M‚Äôequi
            </small>
          </div>
        </div>

        <!-- Cr√©neaux disponibles (Doctolib-like) -->
        <div class="card-mequi mb-4">
          <div class="card-body">
            <h6 class="form-section-title mb-3">
              <i class="fas fa-calendar-alt me-2"></i>
              Cr√©neaux disponibles (7 jours)
            </h6>

            <% availability = @coach.coach_availabilities.first %>

            <% if availability.present? %>
              <% booked_slots = @coach.bookings.where(
                    "start_at >= ? AND start_at <= ?",
                    Date.today.beginning_of_day,
                    7.days.from_now.end_of_day
                  ).pluck(:start_at, :end_at) %>

              <% 7.times do |i| %>
                <% day = Date.today + i.days %>
                <% weekday = day.strftime("%A").downcase %>
                <% next if availability.days_off.to_s.downcase == weekday %>

                <% day_start = Time.zone.parse("#{day} #{availability.start_time.strftime("%H:%M")}") %>
                <% day_end   = Time.zone.parse("#{day} #{availability.end_time.strftime("%H:%M")}") %>

                <h6 class="mt-3 mb-2" style="color:#5f3b2f;">
                  <%= day.strftime("%A %d %B") %>
                </h6>

                <div class="d-flex flex-wrap gap-2">
                  <% current_slot = day_start %>
                  <% while current_slot < day_end %>
                    <% slot_end = current_slot + 1.hour %>

                    <% overlapping = booked_slots.any? do |b_start, b_end|
                      (current_slot < b_end) && (slot_end > b_start)
                    end %>

                    <% if overlapping %>
                      <button type="button"
                              class="btn btn-sm btn-outline-secondary disabled"
                              style="opacity:0.5; pointer-events:none;">
                        <%= current_slot.strftime("%Hh%M") %>
                      </button>
                    <% else %>
                      <% label = "#{day.strftime("%A %d %B")} ¬∑ #{current_slot.strftime("%Hh%M")}‚Äì#{slot_end.strftime("%Hh%M")}" %>
                      <button type="button"
                              class="btn btn-sm btn-brown"
                              onclick="selectSlot('<%= current_slot.iso8601 %>', '<%= slot_end.iso8601 %>', '<%= j label %>')">
                        <%= current_slot.strftime("%Hh%M") %>
                      </button>
                    <% end %>

                    <% current_slot += 1.hour %>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted small mb-0">
                Les disponibilit√©s de ce coach ne sont pas encore renseign√©es.
              </p>
            <% end %>
          </div>
        </div>

        <!-- Garantie -->
        <div class="card-mequi bg-mequi-light">
          <div class="card-body text-center">
            <i class="fas fa-shield-alt fa-2x mb-2" style="color:#5f3b2f;"></i>
            <h6 class="text-mequi-primary mb-1" style="color:#5f3b2f;">Garantie M‚Äôequi</h6>
            <small class="text-muted d-block">
              Coach √©valu√© par la communaut√©. Accompagnement client en cas de probl√®me sur votre premi√®re s√©ance.
            </small>
          </div>
        </div>

      </div>

    </div>
  </div>

</div>

<script>
  function selectSlot(startAtISO, endAtISO, label) {
    const startField = document.getElementById("booking_start_at");
    const endField   = document.getElementById("booking_end_at");
    const labelDiv   = document.getElementById("selected-slot-label");

    if (!startField || !endField || !labelDiv) return;

    startField.value = startAtISO;
    endField.value   = endAtISO;
    labelDiv.textContent = label;

    const bookingCard = document.getElementById("booking-card");
    if (bookingCard) {
      bookingCard.scrollIntoView({ behavior: "smooth", block: "start" });
    }
  }
</script>
